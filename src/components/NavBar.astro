---
// import Navigation from "../components/Navigation.astro";
// import { HoveredLink } from "../components/ui/NavBar";
import Main from "../layouts/Main.astro";
import StaryBackground from "../components/ui/StaryBackground";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import "../styles/global.css";
import MobileNav from "./MobileNav.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="en" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body id="root">
    <header id="textColor">
      <Main>
        <Astronav>
          <MenuItems class="Navbar hidden lg:flex">
            <nav id="textColor" class="flex flex-col">
              <a class={ Astro.url.pathname === '/' ? 'active' : ''} href="/">Home</a>
              <a href="/posts/aboutme/">About</a>

              <a href="/blog/">Blog</a>

              <a href="/tags/">Tags</a>

              <a href="#">Contact</a>
            </nav>
          </MenuItems>
          <MobileNav />
        </Astronav>
      </Main>
    </header>
    <!-- <script src="../utils/navToggle.ts"></script> -->
  </body>
</html>

