---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const pageTitle = "About Me";

interface Identity {
  firstName: string;
  lastName: string;
  country: string;
  occupation: string;
  hobbies: string[];
}

const identity: Identity = {
  firstName: "Lila",
  lastName: "Mendelsohn",
  country: "Denmark",
  occupation: "Student",
  hobbies: [
    "Writing",
    "Singing",
    "Acting",
    "Song Writng",
    "Playing Guitar",
    "Lego Building",
    "Reading",
    "Listing to Music",
    "Talking about Myself",
  ],
};

const skills = ["Writing", "Singing & Acting", "Martial Arts"];

const happy: boolean = true;
const finished: boolean = false;
const goal: number = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
// if (goal !== 3) {
