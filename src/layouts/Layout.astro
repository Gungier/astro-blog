---
// Layout.astro
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
// import StaryBackground from "../components/ui/StaryBackground";
// Import other components if necessary

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title class="text-3xl text-white font-bold">{title}</title>
  </head>
  <body>

    <div class="flex min-h-screen">
      <!-- The main content container -->
      <main class="flex-grow flex justify-center items-center">
        <!-- Use the "slot" element to inject page-specific content here -->

        <slot />
      </main>
      <!-- Navigation (Sidebar) -->
      <Navigation />
    </div>
    <!-- Footer -->
    <footer>
      <Footer />
    </footer>
  </body>
  
</html>

<style>
  body {
    background-color: #000;
    background-image: url("/starySky.jpeg"); /* Your stars image */
    background-repeat: repeat;
    background-position: center;
    /**remove the edges and stitch together clearly */
    background-size: 100%;
    color: white;
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    line-height: 1.5;
    font-size: 18px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  main {
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    /* justify-content: center; */
    /* width: 100%; */
    /* max-width: 960px; */
    /* margin: 0 auto; */
    /* padding: 12px; */
    
    min-height: 100vh;
    margin: 0;
    padding: 12px;
    overflow-x: clip;
  }
</style>
