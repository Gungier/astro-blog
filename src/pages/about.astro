---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

const pageTitle = "About Me";

interface Identity {
  firstName: string;
  lastName: string;
  country: string;
  occupation: string;
  hobbies: string[];
}

const identity: Identity = {
  firstName: "Gabe",
  lastName: "Ungier",
  country: "USA",
  occupation: "Software Engineer",
  hobbies: [
    "reading",
    "writing",
    "coding",
    "gaming",
    "cooking",
    "baking",
    "hiking",
    "camping",
    "traveling",
    "learning",
    "teaching",
    "mentoring",
    "volunteering",
    "giving back",
    "helping others",
    "making the world a better place",
  ],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "Typescript",
  "React",
  "Hopefully Astro Soon!",
];

const happy: boolean = true;
const finished: boolean = false;
const goal: number = 3;

const skillColor = 'navy';
const fontWeight = 'bold';
const textCase = 'uppercase';
